@page
@using HospiEnCasa.App.Dominio
@model HospiEnCasa.App.Presentacion.Pages.NuevaEnfermeraModel
@{
    ViewData["Title"] = "Nueva Enfermera";
}

<!-- Start Ppal Sections -->
<div class="d-flex flex-lg-row flex-column mt-5">
    <!-- Start Submenu vertical -->
    <aside class="col-lg-2 pt-5 ps-3 bg-light">
        <div class="container">
            <nav id="nav-second" class="navbar navbar-light bg-light">
                <ul class="nav flex-lg-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Enfermeras/Enfermeras"><i class="fas fa-list"></i> Listado</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-area="" asp-page="/Enfermeras/NuevaEnfermera" style="color: var(--hospital-green);"><i class="fas fa-user-plus"></i> Registrar</a>
                    </li>
                </ul>
            </nav>
        </div>
    </aside>
    <!-- End Submenu vertical -->
    <!-- Start Main section -->
    <main class="container-fluid pt-5">
        <!-- Start Breadcrumb section -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="" asp-page="/Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-area="" asp-page="/Enfermeras/Enfermeras">Enfermeras</a></li>
                <li class="breadcrumb-item active" aria-current="page">
                    Nueva Enfermera
                </li>
            </ol>
        </nav>
        <!-- End Breadcrumb section -->
        <!-- Start Content section -->
        <section class="">
          <!-- Start Title and form search section -->
          <div class="container pb-4">
            <h1 class="title-section">Nueva Enfermera</h1>
            <form class="" method="post">
              <fieldset class="row g-3 py-3">
                <div class="col-lg-6">
                  <label for="inputAvatar" class="form-label">Ingrese fotografia</label>
                  <input class="form-control" type="file" id="inputAvatar">
                </div>

                <div class="col-lg-6">
                  <label asp-for="Enfermera.Identificacion" class="form-label">Identificacion</label>
                  <input asp-for="Enfermera.Identificacion" class="form-control" required>
                  <span asp-validation-for="Enfermera.Identificacion" class="text-danger"></span>
                </div>

                <div class="col-lg-6">
              <label asp-for="Enfermera.Nombres" class="form-label">Nombres</label>
              <input asp-for="Enfermera.Nombres" class="form-control">
              <span asp-validation-for="Enfermera.Nombres" class="text-danger"></span>
            </div>

                <div class="col-lg-6">
              <label asp-for="Enfermera.Apellidos" class="form-label">Apellidos</label>
              <input asp-for="Enfermera.Apellidos" class="form-control">
              <span asp-validation-for="Enfermera.Apellidos" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
              <label asp-for="Enfermera.NumeroTelefono" for="inputTelefono" class="form-label">Telefono</label>
              <input asp-for="Enfermera.NumeroTelefono" type="tel" class="form-control">
              <span asp-validation-for="Enfermera.NumeroTelefono" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                  <label asp-for="Enfermera.Genero" class="form-label">Genero</label>
                  <select asp-for="Enfermera.Genero" class="form-select" asp-items="Html.GetEnumSelectList<Genero>()">
                    <option selected>Choose...</option>
                  </select>
                </div>
              </fieldset>
              <fieldset class="row g-3 py-3">
                <div class="col-lg-6">
                  <label asp-for="Enfermera.TarjetaProfesional" class="form-label">Tarjeta Profesional</label>
                  <input asp-for="Enfermera.TarjetaProfesional" class="form-control" />
                  <span asp-validation-for="Enfermera.TarjetaProfesional" class="text-danger"></span>
                </div>
                <div class="col-lg-6">
                  <label asp-for="Enfermera.HorasLaborales" class="form-label">Horas Laborales</label>
                  <input asp-for="Enfermera.HorasLaborales" class="form-control" />
                  <span asp-validation-for="Enfermera.HorasLaborales" class="text-danger"></span>
                </div>
              </fieldset>
              <div class="d-flex justify-content-end py-3">
                <button type="submit" class="btn btn-primary">Registrar</button>
              </div>
            </form>
          </div>
          <!-- End Title and form search section -->
        </section>
        <!-- Start Content section -->
    </main>
    <!-- End Main section -->
</div>
<!-- End Ppal Sections -->

<!-- Start Modal-->
@if (@ViewData["Message"] != null)
{

    <partial name="_ModalView" />


    @section ScriptModal{
    <partial name="_ModalViewScript" />
        }
}
else
{
    @section ScriptModal{
        }

}
<!-- End Modal-->

