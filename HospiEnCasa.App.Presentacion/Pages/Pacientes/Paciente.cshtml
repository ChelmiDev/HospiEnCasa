        <div class="container">
          <nav id="nav-second" class="navbar navbar-light bg-light">
            <ul class="nav flex-lg-column">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" asp-area="" asp-page="/Pacientes/Pacientes">Listado</a>
              </li>
              <li class="nav-item">
